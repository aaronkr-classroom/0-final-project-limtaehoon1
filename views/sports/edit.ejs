<main class="sports-profile">
    <div class="container col-xl-10 col-xxl-8 px-4 py-5">
      <div class="pt-5">
        <h1>
          Sports Data for <%= sports.name %>
          <span class="btn btn-outline-danger">Editing</span>
        </h1>
        <div class="row">
            <div class="col col-lg-2" style="position: relative">
              <figure class="sports-img mt-5 mb-3">
                <img src="<%= sports.profileImg || "https://via.placeholder.com/150"
                %>" alt="Placeholder image" class="rounded-circle" />
              </figure>
              <span
                class="btn profileImg-edit-btn btn-outline-danger"
                id="profileImg-edit-button"
                >‚úèÔ∏è</span
              >
              <input
                type="text"
                name="profileImg"
                id="inputProfileImg"
                class="form-control profileImg-edit-input"
                value="<%= sports.profileImg %>"
                placeholder="URL for profile image"
              />
            </div>
            <div class="col col-lg-10">
                <!-- Listing 20.4 (p. 292) -->
                <!-- ÏÇ¨Ïö©Ïûê Îç∞Ïù¥ÌÑ∞ updateÎ°úÏùò Ìèº Ï∂îÍ∞Ä -->
                <form
                  class="sports-edit-form mb-3"
                  method="POST"
                  action="<%= `/sports/${sports._id}/update?_method=PUT` %>"
                >
                  <table class="table table-striped table-hover mt-5 mb-5">
                    <!-- ÏÇ¨Ïö©Ïûê Îç∞Ïù¥ÌÑ∞Î•º Î≥¥Ïó¨Ï£ºÍ∏∞ ÏúÑÌïú ÌÖåÏù¥Î∏î Ï∂îÍ∞Ä -->
                    <tbody>
                      <tr>
                        <th scope="col">name</th>
                        <td colspan="2" class="pt-0 pb-0 px-0">
                          <input
                            type="text"
                            name="name"
                            id="inputname"
                            class="form-control"
                            value="<%= sports.name %>"
                            placeholder="name"
                            autofocus
                          />
                        </td>
                      </tr>
                      <tr>
                        <th scope="col">Email</th>
                        <td colspan="2" class="pt-0 pb-0 px-0">
                          <input
                            type="email"
                            name="email"
                            id="inputEmail"
                            class="form-control"
                            value="<%= sports.email %>"
                            placeholder="Email address"
                            required
                          />
                        </td>
                      </tr>
                      <tr>
                        <th scope="col">Ï†ÑÌôîÎ≤àÌò∏</th>
                        <td colspan="2" class="pt-0 pb-0 px-0">
                          <input
                            type="phoneNumber"
                            name="phoneNumber"
                            id="inputphoneNumber"
                            class="form-control"
                            value="<%= sports.phoneNumber %>"
                            placeholder="phoneNumber"
                            required
                          />
                        </td>
                      </tr>
                      <tr>
                        <th scope="col">Password (+ Confirm)</th>
                        <td class="pt-0 pb-0 px-0">
                          <input
                            type="password"
                            name="password"
                            id="inputPassword"
                            class="form-control"
                            value="<%= sports.password %>"
                            placeholder="Password"
                          />
                        </td>
                        <td class="pt-0 pb-0 px-0">
                          <input
                            type="password"
                            name="password2"
                            id="inputPassword2"
                            class="form-control"
                            value=""
                            placeholder="Confirm password"
                          />
                        </td>
                      </tr>
                      <tr>
                        <th scope="col">Subscribed Account</th>
                        <td colspan="2">
                          <label>
                            <input type="checkbox" value="subscribe" checked />
                            Subscribed to Newsletter
                          </label>
                        </td>
                      </tr>
                      <tr>
                        <th scope="col">Created</th>
                        <td colspan="2"><%= sports.createdAt %></td>
                      </tr>
                      <tr>
                        <th scope="col">Updated</th>
                        <td colspan="2"><%= sports.updatedAt %></td>
                      </tr>
                      <tr>
                        <th scope="col">ID</th>
                        <td colspan="2"><%= sports._id %></td>
                      </tr>
                    </tbody>
                </table>
                <button type="submit" class="btn btn-info">üíæ Update Sports</button>
                <a href="/sports/<%= sports._id %>" class="btn btn-danger"
                  >‚ùå Cancel</a
                >
              </form>
            </div>
          </div>
          <% if (sports.subscribedAccount) { %>
            <h4 class="mt-5 text-center">
              This sports has a subscribed account:
              <a href="/sports/<%= sports.subscribedAccount %>">
                <%= sports.subscribedAccount.name %> </a
              >.
            </h4>
            <% } %>
            <div class="row">
                <div class="col col-lg-10 offset-lg-2">
                  <!-- ÌîÑÎ°úÌïÑ ÌéòÏù¥ÏßÄÏóêÏÑú ÏÇ¨Ïö©Ïûê Í≥ÑÏ†ïÏùò Ìé∏Ïßë Î∞è ÏÇ≠Ï†úÎ•º ÏúÑÌïú ÎßÅÌÅ¨ Ï∂îÍ∞Ä -->
                  <a href="/sports" class="btn btn-primary">‚Üê Back to Sports</a>
                  <a
                    href="/sports/<%= sports._id %>/delete?_method=DELETE"
                    onclick="return confirm('Are you sure you want to delete this record?')"
                    class="btn btn-danger"
                    role="button"
                    >üóëÔ∏è Delete Sports</a
                  >
                </div>
              </div>
            </div>
          </div>
        </main>